							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@citizenreport.com\",\n    \"password\": \"AdminPassword123!\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
